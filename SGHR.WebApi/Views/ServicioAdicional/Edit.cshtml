@using SGHR.Application.Dtos.Configuration.Reservas.ServicioAdicional
@using SGHR.Domain.Enum.Reservas
@model UpdateServicioAdicionalDto

@{
    ViewData["Title"] = "Editar Servicio Adicional";
}

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-header bg-primary text-white">
            <h4>Editar Servicio Adicional</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Precio" class="form-label"></label>
                    <input asp-for="Precio" class="form-control" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Estado" class="form-label"></label>
                    <select asp-for="Estado" class="form-select" asp-items="Html.GetEnumSelectList<EstadoServicioAdicional>()"></select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <input asp-for="Descripcion" class="form-control text-body" type="text" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>


                <div class="text-center">
                    <button type="submit" class="btn btn-primary me-2">Guardar Cambios</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
