@model SGHR.Application.Dtos.Configuration.Users.Usuario.CreateUsuarioDto

@{
    ViewData["Title"] = "Registro de Usuario";
}

<div class="container mt-5" style="max-width: 400px;">
    <div class="card shadow">
        <div class="card-header bg-success text-white text-center">
            <h4>Registrarse</h4>
        </div>
        <div class="card-body">
            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Contraseña" class="form-label"></label>
                    <input asp-for="Contraseña" type="password" class="form-control" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>

                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger">@ViewBag.Error</div>
                }

                <div class="text-center">
                    <button type="submit" class="btn btn-success w-100">Registrar</button>
                </div>

                <div class="mt-3 text-center">
                    <a asp-action="Login">¿Ya tienes cuenta? Inicia sesión</a>
                </div>
            </form>
        </div>
    </div>
</div>
