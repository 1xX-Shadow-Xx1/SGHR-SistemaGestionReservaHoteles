@model IEnumerable<SGHR.Application.Dtos.Configuration.Operaciones.Mantenimiento.MantenimientoDto>

<style>
    /* Columna de acciones compacta */
    th.acciones, td.acciones {
        width: 120px; /* ancho fijo pero suficiente para 2 botones */
        white-space: nowrap; /* evita que los botones se separen en varias líneas */
    }

    /* Ajuste de botones para no separarse demasiado */
    .btn-accion {
        margin: 0 2px; /* espacio pequeño entre botones */
    }

    /* Cursor pointer en filas */
    .fila-usuario {
        cursor: pointer;
    }
</style>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Habitacion</th>
            <th>Piso</th>
            <th>Realizado Por</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Estado</th>
            <th class="acciones text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mantenimiento in Model)
        {
            <tr data-id="@mantenimiento.Id" class="fila-mantenimiento">
                <td>@mantenimiento.Id</td>
                <td>@mantenimiento.NumeroHabitacion</td>
                <td>@mantenimiento.NumeroPiso</td>
                <td>@mantenimiento.RealizadoPor</td>
                <td>@mantenimiento.FechaInicio</td>
                <td>@mantenimiento.FechaFin</td>
                <td>@mantenimiento.Estado</td>
                <td class="acciones text-center">
                    <a class="btn btn-sm btn-primary btn-editar btn-accion"
                       asp-action="Edit"
                       asp-controller="Mantenimiento"
                       asp-route-id="@mantenimiento.Id">
                        Editar
                    </a>
                    <button class="btn btn-sm btn-danger btn-eliminar btn-accion" data-id="@mantenimiento.Id">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
