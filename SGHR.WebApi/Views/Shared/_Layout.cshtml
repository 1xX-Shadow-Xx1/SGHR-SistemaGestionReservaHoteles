<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGHR -</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SGHR.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header style="width: 100%; padding: 20px 40px; position: relative; top: 20px;">
        <div style="display: flex; justify-content: space-between; align-items: center; width: 100%;">
            <a asp-area="" asp-controller="AuthenticationAPI" asp-action="Login"
               class="fw-bold fs-2 text-dark text-decoration-none"
               style="margin-left: 60px; margin-top: 5px;">
                SGHR.Web
            </a>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

   
    <!-- 🟦 Toast centrado arriba -->
    <div aria-live="polite" aria-atomic="true" class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 2000;">
        <div class="toast-container text-center">

            @if (TempData["Success"] != null)
            {
                <div class="toast show align-items-center border-0 shadow-lg"
                     role="alert"
                     aria-live="assertive"
                     aria-atomic="true"
                     style="min-width: 400px; background-color: #28a745; color: white; font-size: 1.1rem;">
                    <div class="d-flex justify-content-between align-items-center px-4 py-3">
                        <div class="toast-body">
                             @TempData["Success"]
                        </div>
                        <button type="button" class="btn-close btn-close-white ms-3" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="toast show align-items-center border-0 shadow-lg"
                     role="alert"
                     aria-live="assertive"
                     aria-atomic="true"
                     style="min-width: 400px; background-color: #dc3545; color: white; font-size: 1.1rem;">
                    <div class="d-flex justify-content-between align-items-center px-4 py-3">
                        <div class="toast-body">
                             @TempData["Error"]
                        </div>
                        <button type="button" class="btn-close btn-close-white ms-3" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            }

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toastElList = [].slice.call(document.querySelectorAll('.toast'));
            toastElList.forEach(toastEl => new bootstrap.Toast(toastEl, { delay: 3000 }).show());
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>