<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SGHR -</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SGHR.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">SGHR.Web</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reserva" asp-action="Index">Reserva</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Pago" asp-action="Index">Pago</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cliente" asp-action="Index">Cliente</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Reporte" asp-action="Index">Reporte</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SGHR - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    <!-- 🟦 Toast centrado arriba -->
    <div aria-live="polite" aria-atomic="true" class="position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 2000;">
        <div class="toast-container text-center">

            @if (TempData["Success"] != null)
            {
                <div class="toast show align-items-center border-0 shadow-lg"
                     role="alert"
                     aria-live="assertive"
                     aria-atomic="true"
                     style="min-width: 400px; background-color: #28a745; color: white; font-size: 1.1rem;">
                    <div class="d-flex justify-content-between align-items-center px-4 py-3">
                        <div class="toast-body">
                            @TempData["Success"]
                        </div>
                        <button type="button" class="btn-close btn-close-white ms-3" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="toast show align-items-center border-0 shadow-lg"
                     role="alert"
                     aria-live="assertive"
                     aria-atomic="true"
                     style="min-width: 400px; background-color: #dc3545; color: white; font-size: 1.1rem;">
                    <div class="d-flex justify-content-between align-items-center px-4 py-3">
                        <div class="toast-body">
                            @TempData["Error"]
                        </div>
                        <button type="button" class="btn-close btn-close-white ms-3" data-bs-dismiss="toast"></button>
                    </div>
                </div>
            }

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const toastElList = [].slice.call(document.querySelectorAll('.toast'));
            toastElList.forEach(toastEl => new bootstrap.Toast(toastEl, { delay: 3000 }).show());
        });
    </script>

    <script>
        // ID del usuario en sesión (establecido en Razor desde el backend)
        const userId = @Context.Session.GetInt32("UserId") ?? 0;
        const TIEMPO_PING = 30000; // 30 segundos entre cada verificación



        if (userId) {

            // Función para notificar al backend que hubo actividad
            async function pingSession() {
                try {
                    const response = await fetch('/Authentication/CheckSession', {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify({ idUsuario: userId })
                    });

                    const result = await response.json();

                    if (!result.active) {
                        console.log("A expirado la sesion");
                        alert('Su sesión ha expirado.');
                        window.location.href = '/Authentication/Logout';
                    }
                } catch (err) {
                    console.error('Error al verificar sesión:', err);
                }
            }

            // Ejecutar ping cada cierto tiempo
            setInterval(pingSession, TIEMPO_PING);

            let ultimaActualizacion = 0;
            const INTERVALO_UPDATE = 180000; // 3 minutos

            // actualizar UltimaActividad cada vez que hay interacción del usuario
            const sessionId = @Context.Session.GetInt32("SesionId");

            function updateActivity() {
                if (!sessionId) return;

                const ahora = Date.now();
                if (ahora - ultimaActualizacion < INTERVALO_UPDATE) return; // actualizar solo cada cierto tiempo
                ultimaActualizacion = ahora;

                fetch('/Authentication/UpdateActivity', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(sessionId) // enviar solo el ID de la sesión
                }).catch(err => console.warn('Error al actualizar actividad', err));
            }

            // Detectar eventos de interacción del usuario
            ['mousemove', 'keydown', 'click', 'scroll'].forEach(evt => {
                document.addEventListener(evt, updateActivity);
            });
        }
    </script>


    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>