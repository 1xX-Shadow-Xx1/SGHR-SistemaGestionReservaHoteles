@{
    ViewData["Title"] = "Habitaciones";
}

<div class="container mt-4">

    <h2 class="text-center mb-4">Gestión de Habitaciones</h2>

    <!-- Buscar por número de habitación arriba alineado a la izquierda -->
    <div class="mb-3 d-flex align-items-center gap-2">
        <label for="buscarHabitacion" class="fw-bold">Buscar por número de habitación:</label>
        <input type="text" id="buscarHabitacion" class="form-control" placeholder="A-000" style="width: 150px;" maxlength="5">
        <button id="btnBuscar" class="btn btn-info">Buscar</button>
    </div>


    <!-- Contenedor principal para la lista -->
    <div id="contenidoHabitaciones" class="card p-3 shadow-sm mx-auto" style="min-height: 500px; width: 95%;">
        <!-- Aquí se cargará _List, _Create o _Edit -->
    </div>

    <!-- Botones Crear y Cargar Lista debajo, centrados -->
    <div class="mt-3 d-flex gap-2 justify-content-center">
        <button id="btnCrear" class="btn btn-primary">Crear Habitación</button>
        <button id="btnCargarLista" class="btn btn-secondary">Cargar Lista</button>

    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
                $(document).ready(function() {

            // --- Cargar lista automáticamente al iniciar ---
            cargarLista();

            // --- Botón Crear ---
            $('#btnCrear').click(function () {
                window.location.href = '@Url.Action("Create", "Habitacion")';
            });


            // --- Botón Cargar Lista ---
            $('#btnCargarLista').click(function () {
                cargarLista();
            });

            // --- Botón Buscar por Número de Habitación ---

            $('#btnBuscar').click(function() {
                var habitacion = $('#buscarHabitacion').val().trim(); // obtiene el número de habitación

                // Validar que no esté vacío y tenga el formato mínimo
                var habitacionRegex = /^[A-Z]-\d{3}$/; // formato A-101
                if (!habitacion || !habitacionRegex.test(habitacion)) {
                    alert("Ingrese un número de habitación válido (ej. A-101)");
                    return;
                }

                // Llamada AJAX a la acción _List pasando el número de habitación
                $.get('@Url.Action("_List", "Habitacion")', { numeroHabitacion: habitacion }, function(data) {
                    $('#contenidoHabitaciones').html(data);
                }).fail(function() {
                    alert("Habitación no encontrada");
                });
            });

            // Buscar al presionar Enter
            $('#buscarHabitacion').keypress(function(e) {
                if(e.which == 13) { // Enter
                    $('#btnBuscar').click();
                    e.preventDefault();
                }
            });





            // --- Función para cargar lista ---
            function cargarLista() {
                $.get('@Url.Action("_List", "Habitacion")', function(data) {
                    $('#contenidoHabitaciones').html(data);
                });
            }

             // Eliminar
            $('#contenidoHabitaciones').on('click', '.btn-eliminar', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $.get('@Url.Action("_Delete", "Habitacion")', { id: id }, function(data) {
                    $('#contenidoHabitaciones').html(data);
                });
            });

           // --- DOBLE CLICK y CLICK DERECHO sobre filas (delegación) ---
            $('#contenidoHabitaciones').on('dblclick', '.fila-habitacion', function() {
                var id = $(this).data('id');
                // Redirige a la vista completa de Details
                window.location.href = '@Url.Action("Details", "Habitacion")/' + id;
            });

             // Botón cancelar en la vista de eliminación → vuelve a la lista
            $('#contenidoHabitaciones').on('dblclick', '.btnCancelDelete', function(e) {
                // Redirige a la vista completa de Details
                e.preventDefault();
                 cargarLista();
            });

            // Boton Confirmar eliminar
            // Envío del formulario de eliminación por AJAX
            $('#contenidoHabitaciones').on('submit', '#formDelete', function (e) {
                e.preventDefault();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("_DeleteConfirmed", "Habitacion")', // Acción que devuelve JSON { success, message, data }
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#contenidoHabitaciones').html(`
                                <div class="alert alert-success" role="alert">
                                    ✅ Habitación eliminada correctamente.
                                </div>
                                <button id="btnVolverIndex" class="btn btn-primary mt-3">
                                    Aceptar
                                </button>
                            `);
                        } else {
                            $('#contenidoHabitaciones').html(`
                                <div class="alert alert-danger" role="alert">
                                    ⚠️ No se pudo eliminar la habitación: ${response.message ?? ''}.
                                </div>
                                <button id="btnVolverIndex" class="btn btn-primary mt-3">
                                    Aceptar
                                </button>
                            `);
                        }
                    },
                    error: function () {
                        $('#contenidoHabitaciones').html(`
                            <div class="alert alert-danger" role="alert">
                                ❌ Error inesperado al eliminar la habitación.
                            </div>
                            <button id="btnVolverIndex" class="btn btn-primary mt-3">
                                Aceptar
                            </button>
                        `);
                    }
                });
            });

            // Botón “Aceptar” → vuelve a la lista
            $('#contenidoHabitaciones').on('click', '#btnVolverIndex', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "Habitacion")', function (data) {
                    $('#contenidoHabitaciones').html(data);
                });
            });

            // Botón “Cancelar” dentro de la vista Delete
            $('#contenidoHabitaciones').on('click', '.btn-btnCancelDelete', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "Habitacion")', function (data) {
                    $('#contenidoHabitaciones').html(data);
                });
            });

        });

    </script>

}