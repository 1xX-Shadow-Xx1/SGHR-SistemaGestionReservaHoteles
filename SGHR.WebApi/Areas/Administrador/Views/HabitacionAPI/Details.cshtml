@using SGHR.Web.Models.Habitaciones.Habitacion
@model HabitacionModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width:600px;">
        <div class="card-header bg-primary text-white">
            <h4>Detalles de la Habitacion</h4>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Numero:</strong> @Model.Numero</p>            
            <p><strong>Capacidad:</strong> @Model.Capacidad</p>
            <p><strong>Amenity:</strong> @Model.AmenityName</p>
            <p><strong>Categoria:</strong> @Model.CategoriaName</p>
            <p><strong>Numero de piso:</strong> @Model.NumeroPiso</p>
            <p><strong>Estado:</strong> @Model.Estado</p>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "HabitacionAPI")" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>


