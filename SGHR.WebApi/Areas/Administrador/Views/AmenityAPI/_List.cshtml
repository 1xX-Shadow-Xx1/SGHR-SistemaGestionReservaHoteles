@using SGHR.Web.Models.Habitaciones.Amenity
@model IEnumerable<AmenityModel>

<style>
    /* Columna de acciones compacta */
    th.acciones, td.acciones {
        width: 120px; /* ancho fijo pero suficiente para 2 botones */
        white-space: nowrap; /* evita que los botones se separen en varias líneas */
    }

    /* Ajuste de botones para no separarse demasiado */
    .btn-accion {
        margin: 0 2px; /* espacio pequeño entre botones */
    }

    /* Cursor pointer en filas */
    .fila-usuario {
        cursor: pointer;
    }
</style>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Descripcion</th>
            <th>Precio</th>
            <th>Precio por capacidad de habitacion</th>
            <th class="acciones text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var amenity in Model)
        {
            <tr data-id="@amenity.Id" class="fila-amenity">
                <td>@amenity.Id</td>
                <td>@amenity.Nombre</td>
                <td>@amenity.Descripcion</td>
                <td>@amenity.Precio</td>
                <td>@amenity.PorCapacidad</td>
                <td class="acciones text-center">
                    <a class="btn btn-sm btn-primary btn-editar btn-accion"
                       asp-action="Edit"
                       asp-controller="AmenityAPI"
                       asp-route-id="@amenity.Id">
                        Editar
                    </a>
                    <button class="btn btn-sm btn-danger btn-eliminar btn-accion" data-id="@amenity.Id">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
