@using SGHR.Web.Models.Operaciones.Mantenimiento
@model MantenimientoModel

@{
    ViewData["Title"] = "Detalles del mantenimiento";
}

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width:600px;">
        <div class="card-header bg-primary text-white">
            <h4>Detalles del mantenimiento</h4>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Realizado por:</strong> @Model.RealizadoPor</p>
            <p><strong>Número de Habitación:</strong> @Model.NumeroHabitacion</p>
            <p><strong>Número del piso:</strong> @Model.NumeroPiso</p>
            <p><strong>Fecha de inicio:</strong> @Model.FechaInicio</p>
            <p><strong>Fecha de fin:</strong> @Model.FechaFin</p>
            <p><strong>Descripción:</strong> @Model.Descripcion</p>
            <p><strong>Estado:</strong> @Model.Estado</p>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "Mantenimiento")" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>