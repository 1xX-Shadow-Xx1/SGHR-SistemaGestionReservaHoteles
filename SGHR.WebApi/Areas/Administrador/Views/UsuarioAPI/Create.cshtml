@using SGHR.Web.Models.Usuarios.Usuario
@using SGHR.Web.Models.EnumsModel.Usuario
@model CreateUsuarioModel

@{
    ViewData["Title"] = "Crear Usuario";
}

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width: 500px;">
        <div class="card-header bg-primary text-white">
            <h4>Crear Nuevo Usuario</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="mb-3">
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Contraseña" class="form-label"></label>
                    <input asp-for="Contraseña" class="form-control" type="password" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rol" class="form-label"></label>
                    <select asp-for="Rol" class="form-select" asp-items="Html.GetEnumSelectList<RolUsuarioModel>()"></select>
                    <span asp-validation-for="Rol" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary me-2">Crear</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


