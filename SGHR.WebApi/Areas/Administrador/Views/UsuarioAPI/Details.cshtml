@using SGHR.Web.Models.Usuarios.Usuario
@model UsuarioModel

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width:600px;">
        <div class="card-header bg-primary text-white">
            <h4>Detalles del Usuario</h4>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Nombre:</strong> @Model.Nombre</p>
            <p><strong>Correo:</strong> @Model.Correo</p>
            <p><strong>Rol:</strong> @Model.Rol</p>
            <p><strong>Estado:</strong> @Model.Estado</p>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "UsuarioAPI")" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>