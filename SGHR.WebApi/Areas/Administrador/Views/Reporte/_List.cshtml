@model IEnumerable<SGHR.Application.Dtos.Configuration.Operaciones.Reporte.ReporteDto>

<style>
    /* Columna de acciones compacta */
    th.acciones, td.acciones {
        width: 120px; /* ancho fijo pero suficiente para 2 botones */
        white-space: nowrap; /* evita que los botones se separen en varias líneas */
    }

    /* Ajuste de botones para no separarse demasiado */
    .btn-accion {
        margin: 0 2px; /* espacio pequeño entre botones */
    }

    /* Cursor pointer en filas */
    .fila-usuario {
        cursor: pointer;
    }
</style>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Tipo de Reporte</th>
            <th>Generado por</th>
            <th>Fecha de generacion</th>
            <th class="acciones text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reporte in Model)
        {
            <tr data-id="@reporte.Id" class="fila-reporte">
                <td>@reporte.Id</td>
                <td>@reporte.TipoReporte</td>
                <td>@reporte.GeneradoPor</td>
                <td>@reporte.FechaGeneracion</td>
                <td class="acciones text-center">
                    <a class="btn btn-sm btn-primary btn-editar btn-accion"
                       asp-action="Edit"
                       asp-controller="Reporte"
                       asp-route-id="@reporte.Id">
                        Editar
                    </a>
                    <button class="btn btn-sm btn-danger btn-eliminar btn-accion" data-id="@reporte.Id">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

