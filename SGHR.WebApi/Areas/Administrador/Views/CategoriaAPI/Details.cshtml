@using SGHR.Web.Models.Habitaciones.Categoria
@model CategoriaModel

@{
    ViewData["Title"] = "Detalles de la categoria";
}

<div class="container mt-5">
    <div class="card shadow-sm mx-auto" style="max-width:600px;">
        <div class="card-header bg-primary text-white">
            <h4>Detalles de la Categoria</h4>
        </div>
        <div class="card-body">
            <p><strong>ID:</strong> @Model.Id</p>
            <p><strong>Nombre:</strong> @Model.Nombre</p>
            <p><strong>Descripcion:</strong> @Model.Descripcion</p>
            <p><strong>Precio:</strong> @Model.Precio.ToString("C")</p>
        </div>
        <div class="card-footer text-center">
            <a href="@Url.Action("Index", "Categoria")" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>
