
@{
    ViewData["Title"] = "Categorias";
}

<div class="container mt-4">

    <h2 class="text-center mb-4">Gestión de Categorías</h2>

    <!-- Buscar por ID arriba alineado a la izquierda -->
    <div class="mb-3 d-flex align-items-center gap-2">
        <label for="buscarId" class="fw-bold">Buscar ID:</label>
        <input type="number" id="buscarId" class="form-control" placeholder="ID Categoria" style="width: 150px;">
        <button id="btnBuscar" class="btn btn-info">Buscar</button>
    </div>

    <!-- Contenedor principal para la lista -->
    <div id="contenidoCategorias" class="card p-3 shadow-sm mx-auto" style="min-height: 500px; width: 95%;">
        <!-- Aquí se cargará _List, _Create o _Edit -->
    </div>

    <!-- Botones Crear y Cargar Lista debajo, centrados -->
    <div class="mt-3 d-flex gap-2 justify-content-center">
        <button id="btnCrear" class="btn btn-primary">Crear Categoria</button>
        <button id="btnCargarLista" class="btn btn-secondary">Cargar Lista</button>

    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
                $(document).ready(function() {

            // --- Cargar lista automáticamente al iniciar ---
            cargarLista();

            // --- Botón Crear ---
             $('#btnCrear').click(function () {
                window.location.href = '@Url.Action("Create", "CategoriaAPI")';
            });


            // --- Botón Cargar Lista ---
            $('#btnCargarLista').click(function () {
                cargarLista();
            });

           // --- Botón Buscar por ID ---
            $('#btnBuscar').click(function() {
                var id = $('#buscarId').val().trim(); // obtiene el ID
                if (!id || id <= 0) {
                    alert("Ingrese un ID válido");
                    return;
                }

                // Llamada AJAX a la acción _List pasando el ID
                $.get('@Url.Action("_List", "CategoriaAPI")', { id: id }, function(data) {
                    $('#contenidoCategorias').html(data);
                }).fail(function() {
                    alert("Categoria no encontrada");
                });
            });
            $('#buscarId').keypress(function(e) {
                if(e.which == 13) { // Enter
                    $('#btnBuscar').click();
                    e.preventDefault();
                }
            });




            // --- Función para cargar lista ---
            function cargarLista() {
                $.get('@Url.Action("_List", "CategoriaAPI")', function(data) {
                    $('#contenidoCategorias').html(data);
                });
            }

             // Eliminar
            $('#contenidoCategorias').on('click', '.btn-eliminar', function(e) {
                e.preventDefault();
                var id = $(this).data('id');
                $.get('@Url.Action("_Delete", "CategoriaAPI")', { id: id }, function(data) {
                    $('#contenidoCategorias').html(data);
                });
            });

           // --- DOBLE CLICK y CLICK DERECHO sobre filas (delegación) ---
            $('#contenidoCategorias').on('dblclick', '.fila-categoria', function() {
                var id = $(this).data('id');
                // Redirige a la vista completa de Details
                window.location.href = '@Url.Action("Details", "CategoriaAPI")/' + id;
            });

             // Botón cancelar en la vista de eliminación → vuelve a la lista
            $('#contenidoCategorias').on('dblclick', '.btnCancelDelete', function(e) {
                // Redirige a la vista completa de Details
                e.preventDefault();
                 cargarLista();
            });

            // Boton Confirmar eliminar
            // Envío del formulario de eliminación por AJAX
            $('#contenidoCategorias').on('submit', '#formDelete', function (e) {
                e.preventDefault();

                $.ajax({
                    type: 'POST',
                    url: '@Url.Action("_DeleteConfirmed", "CategoriaAPI")', // Acción que devuelve JSON { success, message, data }
                    data: $(this).serialize(),
                    success: function (response) {
                        if (response.success) {
                            $('#contenidoCategorias').html(`
                                <div class="alert alert-success" role="alert">
                                    ✅ Categoria eliminada correctamente.
                                </div>
                                <button id="btnVolverIndex" class="btn btn-primary mt-3">
                                    Aceptar
                                </button>
                            `);
                        } else {
                            $('#contenidoCategorias').html(`
                                <div class="alert alert-danger" role="alert">
                                    ⚠️ No se pudo eliminar la categoria: ${response.message ?? ''}.
                                </div>
                                <button id="btnVolverIndex" class="btn btn-primary mt-3">
                                    Aceptar
                                </button>
                            `);
                        }
                    },
                    error: function () {
                        $('#contenidoCategorias').html(`
                            <div class="alert alert-danger" role="alert">
                                ❌ Error inesperado al eliminar la categoria.
                            </div>
                            <button id="btnVolverIndex" class="btn btn-primary mt-3">
                                Aceptar
                            </button>
                        `);
                    }
                });
            });

            // Botón “Aceptar” → vuelve a la lista
            $('#contenidoCategorias').on('click', '#btnVolverIndex', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "CategoriaAPI")', function (data) {
                    $('#contenidoCategorias').html(data);
                });
            });

            // Botón “Cancelar” dentro de la vista Delete
            $('#contenidoCategorias').on('click', '.btn-btnCancelDelete', function (e) {
                e.preventDefault();
                $.get('@Url.Action("_List", "CategoriaAPI")', function (data) {
                    $('#contenidoCategorias').html(data);
                });
            });

        });

    </script>
}



