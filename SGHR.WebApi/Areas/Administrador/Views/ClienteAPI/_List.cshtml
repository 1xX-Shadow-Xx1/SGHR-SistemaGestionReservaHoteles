@using SGHR.Web.Models.Usuarios.Cliente
@model IEnumerable<ClienteModel>

<style>
    /* Columna de acciones compacta */
    th.acciones, td.acciones {
        width: 120px; /* ancho fijo pero suficiente para 2 botones */
        white-space: nowrap; /* evita que los botones se separen en varias líneas */
    }

    /* Ajuste de botones para no separarse demasiado */
    .btn-accion {
        margin: 0 2px; /* espacio pequeño entre botones */
    }

    /* Cursor pointer en filas */
    .fila-cliente {
        cursor: pointer;
    }
</style>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Apellido</th>
            <th>Cedula</th>
            <th>Correo</th>
            <th>Direccion</th>
            <th>Telefono</th>
            <th class="acciones text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cliente in Model)
        {
            <tr data-id="@cliente.Id" class="fila-cliente">
                <td>@cliente.Id</td>
                <td>@cliente.Nombre</td>
                <td>@cliente.Apellido</td>
                <td>@cliente.Cedula</td>
                <td>@cliente.Correo</td>
                <td>@cliente.Direccion</td>
                <td>@cliente.Telefono</td>
                <td class="acciones text-center">
                    <a class="btn btn-sm btn-primary btn-editar btn-accion"
                       asp-action="Edit"
                       asp-controller="ClienteAPI"
                       asp-route-id="@cliente.Id">
                        Editar
                    </a>
                    <button class="btn btn-sm btn-danger btn-eliminar btn-accion" data-id="@cliente.Id">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
