@using SGHR.Web.Models.Reservas.Tarifa
@model IEnumerable<TarifaModel>

<style>
    /* Columna de acciones compacta */
    th.acciones, td.acciones {
        width: 120px; /* ancho fijo pero suficiente para 2 botones */
        white-space: nowrap; /* evita que los botones se separen en varias líneas */
    }

    /* Ajuste de botones para no separarse demasiado */
    .btn-accion {
        margin: 0 2px; /* espacio pequeño entre botones */
    }

    /* Cursor pointer en filas */
    .fila-usuario {
        cursor: pointer;
    }
</style>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Categoria</th>
            <th>Fecha de inicio</th>
            <th>Fecha de finalizacion</th>
            <th>Precio</th>
            <th class="acciones text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarifa in Model)
        {
            <tr data-id="@tarifa.Id" class="fila-tarifa">
                <td>@tarifa.Id</td>
                <td>@tarifa.NombreCategoria</td>
                <td>@tarifa.Fecha_inicio</td>
                <td>@tarifa.Fecha_fin</td>
                <td>@tarifa.Precio</td>
                <td class="acciones text-center">
                    <a class="btn btn-sm btn-primary btn-editar btn-accion"
                       asp-action="Edit"
                       asp-controller="Tarifa"
                       asp-route-id="@tarifa.Id">
                        Editar
                    </a>
                    <button class="btn btn-sm btn-danger btn-eliminar btn-accion" data-id="@tarifa.Id">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

