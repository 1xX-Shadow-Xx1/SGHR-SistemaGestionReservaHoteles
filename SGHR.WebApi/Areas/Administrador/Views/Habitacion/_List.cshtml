@model IEnumerable<SGHR.Application.Dtos.Configuration.Habitaciones.Habitacion.HabitacionDto>

<style>
    /* Columna de acciones compacta */
    th.acciones, td.acciones {
        width: 120px; /* ancho fijo pero suficiente para 2 botones */
        white-space: nowrap; /* evita que los botones se separen en varias líneas */
    }

    /* Ajuste de botones para no separarse demasiado */
    .btn-accion {
        margin: 0 2px; /* espacio pequeño entre botones */
    }

    /* Cursor pointer en filas */
    .fila-cliente {
        cursor: pointer;
    }
</style>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Numero</th>
            <th>numero de piso</th>
            <th>Capacidad</th>
            <th>Amenity</th>
            <th>Categoria</th>
            <th>Estado</th>
            <th class="acciones text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var habitacion in Model)
        {
            <tr data-id="@habitacion.Id" class="fila-habitacion">
                <td>@habitacion.Id</td>
                <td>@habitacion.Numero</td>
                <td>@habitacion.NumeroPiso</td>
                <td>@habitacion.Capacidad</td>
                <td>@habitacion.AmenityName</td>
                <td>@habitacion.CategoriaName</td>
                <td>@habitacion.Estado</td>
                <td class="acciones text-center">
                    <a class="btn btn-sm btn-primary btn-editar btn-accion"
                       asp-action="Edit"
                       asp-controller="Habitacion"
                       asp-route-id="@habitacion.Id">
                        Editar
                    </a>
                    <button class="btn btn-sm btn-danger btn-eliminar btn-accion" data-id="@habitacion.Id">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>
