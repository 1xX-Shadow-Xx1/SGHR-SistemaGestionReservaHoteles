@using SGHR.Web.Models.Reservas.Reserva
@model IEnumerable<ReservaModel>

<style>
    /* Columna de acciones compacta */
    th.acciones, td.acciones {
        width: 120px; /* ancho fijo pero suficiente para 2 botones */
        white-space: nowrap; /* evita que los botones se separen en varias líneas */
    }

    /* Ajuste de botones para no separarse demasiado */
    .btn-accion {
        margin: 0 2px; /* espacio pequeño entre botones */
    }

    /* Cursor pointer en filas */
    .fila-usuario {
        cursor: pointer;
    }
</style>

<table class="table table-striped table-bordered table-hover">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Habitacion</th>
            <th>Cedula</th>
            <th>Correo</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Total</th>
            <th>Estado</th>
            <th class="acciones text-center">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reserva in Model)
        {
            <tr data-id="@reserva.Id" class="fila-reserva">
                <td>@reserva.Id</td>
                <td>@reserva.NumeroHabitacion</td>
                <td>@reserva.CedulaCliente</td>
                <td>@reserva.CorreoCliente</td>
                <td>@reserva.FechaInicio</td>
                <td>@reserva.FechaFin</td>
                <td>@reserva.CostoTotal</td>
                <td>@reserva.Estado</td>
                <td class="acciones text-center">
                    <a class="btn btn-sm btn-primary btn-editar btn-accion"
                       asp-action="Edit"
                       asp-controller="Reserva"
                       asp-route-id="@reserva.Id">
                        Editar
                    </a>
                    <button class="btn btn-sm btn-danger btn-eliminar btn-accion" data-id="@reserva.Id">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


